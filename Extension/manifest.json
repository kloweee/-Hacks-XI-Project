{
  "manifest_version": 3,
  "name": "Aquaconsious",
  "version": "1.0",
  "description": "Introducing Aquaconsious, a Chrome extension that reveals the environmental impact of your Gemini interactions.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },

  "permissions": ["activeTab", "scripting"],

  "host_permissions": [
    "https://gemini.google.com/*",
    "https://bard.google.com/*"
  ],


  "content_scripts": [
    {
        "matches": [
            "https://gemini.google.com/*"
        ],
        "js": ["content.js"]
    }
  ]
}